<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".viewModel.MainActivity">


    <TextView
        android:id="@+id/tv_main_to_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="main_to_work"
        android:text="主线程向子线程发送消息"
        android:textSize="26sp"
        tools:ignore="HardcodedText,OnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="createMoreTask"
        android:text="创建多个任务"
        android:textSize="26sp"
        tools:ignore="OnClick" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="resumeThread"
        android:text="恢复线程"
        android:textSize="26sp"
        tools:ignore="HardcodedText,OnClick" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="pauseThread"
        android:text="暂停线程"
        android:textSize="26sp"
        tools:ignore="HardcodedText,OnClick" />


</LinearLayout>